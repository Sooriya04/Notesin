<main class="note-main">
  <form action="/" method="POST" autocomplete="off" class="note-form">
    <div class="note-box" id="noteBox">
      <div class="note-top">
        <input
          type="text"
          name="title"
          placeholder="Title"
          class="note-title"
        />
        <i class="fa-regular fa-bell note-icon pin-icon"></i>
      </div>
      <textarea
        name="content"
        placeholder="Take a note..."
        class="note-content"
        rows="2"
      ></textarea>

      <div class="note-bottom">
        <div class="note-icons">
          <i class="fa-solid fa-font"></i>
          <i class="fa-solid fa-palette"></i>
          <i class="fa-regular fa-bell"></i>
          <i class="fa-solid fa-user-plus"></i>
          <i class="fa-regular fa-image"></i>
          <i class="fa-solid fa-box-archive"></i>
          <i class="fa-solid fa-ellipsis-vertical"></i>
          <i class="fa-solid fa-rotate-left disabled"></i>
          <i class="fa-solid fa-rotate-right disabled"></i>
        </div>
        <button type="submit" class="note-close">Close</button>
      </div>
    </div>
  </form>
</main>
<script>
  const noteBox = document.getElementById("noteBox");
  const titleInput = noteBox.querySelector(".note-title");
  const contentInput = noteBox.querySelector(".note-content");
  const closeButton = noteBox.querySelector(".note-close");

  function expandBox() {
    noteBox.classList.add("expanded");
    titleInput.style.display = "block";
    closeButton.style.display = "inline";
  }

  function collapseBox(e) {
    if (!noteBox.contains(e.target)) {
      noteBox.classList.remove("expanded");
      titleInput.style.display = "none";
      closeButton.style.display = "none";
    }
  }

  noteBox.addEventListener("click", expandBox);

  document.addEventListener("click", collapseBox);
</script>
