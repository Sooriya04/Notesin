<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/notes.css">
</head>
<body>
  <div class="container">
    <div class="row">
      <% notes.forEach(note => { %>
        <div class="col">
          <div class="card">
            <div class="card-body">
              <h3><a href="/notes/<%= note.id %>"><%= note.title %></a></h3>
              <div class="btn-div">
                <div class="btn-group">
                  <form  method="POST" action="/notes/<%= note.id %>/delete">
                    <button type="submit" class="btn btn-sm">Delete</button>
                  </form>
                </div>
                <small class="text-muted" data-time="<%= note.createdAt %>"></small>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
